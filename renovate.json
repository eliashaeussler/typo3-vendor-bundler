{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"local>eliashaeussler/renovate-config",
		"local>eliashaeussler/renovate-config:composer-plugin"
	],
	"constraints": {
		"php": "8.2.*"
	},
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/^docs/schema\\.md$/",
				"/^res/typo3-vendor-bundler\\.schema\\.json$/"
			] ,
			"matchStrings": [
				"`(?<currentValue>[^`]+)`\\s*<!-- cdx-spec -->",
				"\"version\": {\\s*\"default\": \"(?<currentValue>[^\"]+)\""
			],
			"datasourceTemplate": "github-tags",
			"depNameTemplate": "CycloneDX/specification",
			"versioningTemplate": "loose"
		}
	],
	"packageRules": [
		{
			"enabled": false,
			"matchCurrentVersion": "8.2",
			"matchDatasources": [
				"github-tags"
			],
			"matchDepNames": [
				"php"
			],
			"matchFileNames": [
				".github/workflows/cgl.yaml"
			]
		},
		{
			"groupName": "CycloneDX specification",
			"extends": [
				":automergeDisabled"
			],
			"matchDepNames": [
				"CycloneDX/specification"
			],
			"matchManagers": [
				"custom.regex"
			],
			"commitMessagePrefix": "[FEATURE]",
			"commitMessageAction": "Support",
			"commitMessageTopic": "CycloneDX specification",
			"commitMessageExtra": "{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}",
			"labels": [
				"enhancement"
			]
		}
	]
}
